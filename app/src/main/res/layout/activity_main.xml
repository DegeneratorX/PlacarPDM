<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="801dp"
        android:layout_height="1167dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ce7336203a60118fa487e268ca7ec020" />

    <Button
        android:id="@+id/btIniciar"
        android:layout_width="202dp"
        android:layout_height="90dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="184dp"
        android:fontFamily="monospace"
        android:onClick="openConfig"
        android:text="Começar PLACAR"
        app:layout_constraintBottom_toTopOf="@+id/btPreviousGame"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btPreviousGame"
        android:layout_width="146dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="openPreviusGames"
        android:text="Histórico de Partidas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="243dp"
        android:layout_height="92dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="152dp"
        android:fontFamily="casual"
        android:text="PLACAR DE FUTEBOL"
        android:textColor="#0B7000"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/btIniciar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>